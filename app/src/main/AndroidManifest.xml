<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ibercivis.interfungiapp">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/frame" />

        <activity
            android:name="com.ibercivis.interfungiapp.BorrarProyecto"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ibercivis.interfungiapp.DescargarDatos"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ibercivis.interfungiapp.ProyectoPrivado"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ibercivis.interfungiapp.Usuario"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ibercivis.interfungiapp.QuienesSomos"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ibercivis.interfungiapp.add_marker"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ibercivis.interfungiapp.Mapa2"
            android:screenOrientation="portrait"
            android:exported="true"/>
        <!--activity
            android:name=".Add"
            android:screenOrientation="portrait" /-->
        <activity
            android:name="com.ibercivis.interfungiapp.Login"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ibercivis.interfungiapp.SplashActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ibercivis.interfungiapp.SignUp"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ibercivis.interfungiapp.ListadoProyectos"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ibercivis.interfungiapp.CrearProyecto"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ibercivis.interfungiapp.CrearObservacion"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ibercivis.interfungiapp.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ibercivis.interfungiapp.EditarProyecto"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.ibercivis.interfungiapp.VerMarcadorEnMapa"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>