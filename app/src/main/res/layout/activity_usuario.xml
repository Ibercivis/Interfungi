<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ibercivis.interfungiapp.MainActivity"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:background="@color/dark"
        app:itemTextColor="@color/textoOscuro"
        app:itemIconTint="@color/textoOscuro"
        android:foregroundTint="@color/textoOscuro"
        android:layout_gravity="start"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/dark"
            >
            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@string/user3"
                        android:textAllCaps="true"
                        android:textColor="@color/primaryLightColor"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:transitionName="logo_desc" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerproyectosgustan"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

                </LinearLayout>

        </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/cargando"
            android:layout_width="match_parent"
            android:layout_height="770dp"
            android:background="#A4363030"
            android:gravity="center"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/marcobotonsolido">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/popup_wait"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/textoClaro"/>

                <ProgressBar
                    android:layout_marginTop="8dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:progressTint="@color/textoClaro"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/marco_visualizar_foto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A4363030"
            android:gravity="center"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/marcobotonsolido">
                <ImageView
                    android:id="@+id/foto_ver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">

                </ImageView>

                <Button
                    android:id="@+id/foto_volver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volver"
                    android:layout_margin="8dp"
                    android:paddingHorizontal="20dp"
                    android:background="@color/primaryColor"
                    android:textColor="#fff"/>

            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>