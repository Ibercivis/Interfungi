<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ibercivis.interfungiapp.MainActivity"
    android:id="@+id/drawer_layoutMarcador"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"

    >

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_viewMarcador"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:background="@color/dark"
        app:itemTextColor="@color/textoOscuro"
        app:itemIconTint="@color/textoOscuro"
        android:foregroundTint="@color/textoOscuro"
        android:layout_gravity="start"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark">












        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/paraMapaMarcador">

            <org.osmdroid.views.MapView
                android:id="@+id/mapMarker"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />



            <Button
                android:id="@+id/btn_backToUser"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="64dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@color/primaryColor"
                android:text="VOLVER"
                android:textColor="#E9EBF1"
                android:textSize="14dp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/txtCopyright"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PNOA cedido por © Instituto Geográfico Nacional de España"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="6dp"
                android:fontFamily="@font/noto_sans"
                android:textSize="11sp"
                android:textColor="#FFFFFF"

                />



        </RelativeLayout>

        <LinearLayout
            android:id="@+id/cargando"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A4363030"
            android:gravity="center"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/marcobotonsolido">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/popup_wait"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/textoClaro"/>

                <ProgressBar
                    android:layout_marginTop="8dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>